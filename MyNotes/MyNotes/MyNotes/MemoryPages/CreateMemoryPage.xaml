<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNotes.Pages.CreateMemoryPage"
             Title="Создание записи">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Button x:Name="createMemory" Text="Создать запись" 
                    HorizontalOptions="FillAndExpand" FontSize="Micro"
                    Clicked="CreateMemoryClicked" />
                <Editor x:Name="memoryEditor" Placeholder="Введите запись"
                        AutoSize="TextChanges"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>