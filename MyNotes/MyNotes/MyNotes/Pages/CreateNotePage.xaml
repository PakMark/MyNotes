<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNotes.Pages.CreateNotePage"
             Title="Создание заметки">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Button x:Name="createNote" Text="Создать заметку" 
                    HorizontalOptions="FillAndExpand" FontSize="Micro"
                    Clicked="CreateNoteClicked" />
                <Editor x:Name="noteEditor" Placeholder="Введите текст заметки"
                        AutoSize="TextChanges"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>