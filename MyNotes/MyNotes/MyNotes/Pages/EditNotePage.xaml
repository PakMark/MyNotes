<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNotes.Pages.EditNotePage"
             Title="Изменение заметки">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Button x:Name="editNote" Text="Сохранить изменения"
                    HorizontalOptions="FillAndExpand" FontSize="Micro"
                    Clicked="EditNoteClicked" />
                <Editor x:Name="noteEditor" AutoSize="TextChanges" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>